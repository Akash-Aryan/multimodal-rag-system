# Environment Variables Template
# Copy this file to .env and update with your values

# LLM API Keys (if using cloud providers)
OPENAI_API_KEY=your_openai_api_key_here
HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# Vector Database API Keys
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=your_pinecone_environment_here

# Ollama Configuration (for local LLM)
OLLAMA_BASE_URL=http://localhost:11434

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/multimodal_rag.log

# Model Paths (for local models)
WHISPER_MODEL_PATH=models/whisper
TEXT_EMBEDDING_MODEL_PATH=models/text_embeddings
IMAGE_EMBEDDING_MODEL_PATH=models/image_embeddings

# Data Paths
RAW_DATA_PATH=./data/raw
PROCESSED_DATA_PATH=./data/processed
EMBEDDINGS_PATH=./data/embeddings

# OCR Configuration
TESSERACT_CMD=tesseract  # Path to tesseract executable
